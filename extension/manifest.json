{
    "name": "RankBrand",
    "version": "1.0",
    "description": "Provides rankings of brands based on their sustainability methods",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },

    "permissions": ["tabs", "activeTab", "storage", "declarativeContent"],
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      },
      "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "css": ["style.css"],
          "js": ["content.js"]
        }
      ],
      "web_accessible_resources": [
        "json.txt",
        "fonts/*.woff",
        "fonts/*.woff2",
        "fonts/*.ttf",
        "fonts/*.otf",
        "images/background.png"
    ],
    "manifest_version": 2
  }